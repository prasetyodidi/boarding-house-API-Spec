{
  "openapi": "3.0.3",
  "info": {
    "title": "Boarding House  OpenAPI",
    "description": "API Specification for Boarding House",
    "version": "1.0.0",
    "contact": {
      "name": "Didi Prasetyo",
      "email": "didiprasetyo360@gmail.com",
      "url": "https://prasetyodidi.github.io/"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/rules/{boardingHouseId}": {
      "get": {
        "parameters": [
          {
            "$ref": "#/components/parameters/boardingHouseId"
          }
        ],
        "description": "get all rules",
        "responses": {
          "200": {
            "$ref": "#/components/responses/rulesSuccessResponse"
          },
          "404": {
            "$ref": "#/components/responses/boardingHouseIdNotFoundResponse"
          }
        }
      }
    },
    "/reminder/{boardingHouseId}": {
      "get": {
        "parameters": [
          {
            "$ref": "#/components/parameters/boardingHouseId"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/reminderSuccessResponse"
          },
          "404": {
            "$ref": "#/components/responses/boardingHouseIdNotFoundResponse"
          }
        }
      }
    },
    "/room/{boardingHouseId}": {
      "parameters": [
        {
          "$ref": "#/components/parameters/boardingHouseId"
        }
      ],
      "get": {
        "description": "get list of rooms by boarding house id",
        "responses": {
          "200": {
            "description": "Success get list of rooms",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "required": true
                    },
                    "message": {
                      "type": "string",
                      "required": true
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/room"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/boardingHouseIdNotFoundResponse"
          }
        }
      }
    },
    "/room/{roomId}": {
      "description": "get detail room info",
      "get": {
        "parameters": [
          {
            "$ref": "#/components/parameters/roomId"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/detailRoomSuccessResponse"
          },
          "404": {
            "$ref": "#/components/responses/roomIdNotFoundResponse"
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "boardingHouseId": {
        "name": "boardingHouseId",
        "description": "boarding house id",
        "in": "path"
      },
      "roomId": {
        "name": "roomId",
        "description": "room id",
        "in": "path"
      },
      "ownerIdQuery": {
        "in": "query",
        "description": "selection boarding house by owner id",
        "name": "ownerId",
        "schema": {
          "minLength": 1,
          "type": "string",
          "required": false
        }
      },
      "tenantIdQuery": {
        "in": "query",
        "description": "selection boarding house by tenant id",
        "name": "tenantId",
        "schema": {
          "minLength": 1,
          "type": "string",
          "required": false
        }
      }
    },
    "responses": {
      "rulesSuccessResponse": {
        "description": "response get rules",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "required": true
                },
                "message": {
                  "type": "string",
                  "required": true
                },
                "data": {
                  "type": "array",
                  "required": true,
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "reminderSuccessResponse": {
        "description": "response get reminder",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "required": true
                },
                "message": {
                  "type": "string",
                  "required": true
                },
                "data": {
                  "$ref": "#/components/schemas/reminder"
                }
              }
            }
          }
        }
      },
      "boardingHouseSuccessResponse": {

        "description": "success get list boarding house",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "address": {
                        "type": "string"
                      },
                      "image_url": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "required": ["status", "message", "data"]
            }
          }
        }
      },
      "boardingHouseIdNotFoundResponse": {
        "description": "boarding house id not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              },
              "required": ["status", "message"]
            }
          }
        }
      },
      "roomIdNotFoundResponse": {
        "description": "Room id not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              },
              "required": ["status", "message"]
            }
          }
        }
      },
      "detailRoomSuccessResponse": {
        "description": "Success get detail room info",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "required": true
                },
                "message": {
                  "type": "string",
                  "required": true
                },
                "data": {
                  "$ref": "#/components/schemas/detailRoom"
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "room": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "required": true
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "required": true
          },
          "boarding_house_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "owner": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "required": false
          },
          "image_url": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "required": false
          }
        }
      },
      "facility": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "value": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "icon_url": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          }
        },
        "required": ["name", "value"]
      },
      "boardingHouse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "required": true
          },
          "address": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "required": true
          },
          "owner": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "required": false
          },
          "image_url": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "required": false
          }
        }
      },
      "reminder": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "reminder": {
              "type": "string"
            },
            "image_url": {
              "type": "string"
            }
          }
        }
      },
      "detailRoom": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "owner_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "tenant_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "address": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "image_url": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "boarding_house_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "rental_period": {
            "type": "integer",
            "format": "int32"
          },
          "date_of_entry": {
            "type": "integer",
            "format": "int64"
          },
          "date_out": {
            "type": "integer",
            "format": "int64"
          },
          "facilities": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/facility"
            }
          }
        }
      }
    }
  }
}
